<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageViewContainer"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@android:color/holo_blue_bright"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textViewTitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:maxLength="30"
            android:text="Titre"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTitre"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/imageViewContainer"
            android:text="Du 01 Janvier au 29 Juillet" />

        <TextView
            android:id="@+id/textViewDomaine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDates"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/imageViewContainer"
            android:text="Domaine" />

        <TextView
            android:id="@+id/textViewDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDomaine"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/imageViewContainer"
            android:text="16800 km - " />

        <TextView
            android:id="@+id/textViewVille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDomaine"
            android:layout_toEndOf="@id/textViewDistance"
            android:text="Ville" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>